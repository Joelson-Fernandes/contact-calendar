<%- include('../includes/header'); %>
<%- include('../includes/navbar'); %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3">
                <h1 class="text-center my-3">Agenda</h1>
                <p class="text-center lead">Seus contatos</p>

                <%- include('../includes/messages')%>

                    <table class="table table-striped table-hover">
                        <thead>
                          <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                          </tr>
                        </thead>
                        <tbody>

                        <% contatos.contato.forEach(contato => { %>

                            <tr>
                                <th><%= contato.nome %></th>
                                <td><%= contato.email %></td>
                                <td><%= contato.telefone %></td>
                                <td><a class="" href="/edit_contato/<%=contato._id%>">Editar</a></td>
                                <td><a class="text-danger" href="/contato/excluir/<%=contato._id%>">Excluir</a></td>
                            </tr>

                        <% }) %> 

                        </tbody>
                    </table>

            </div>
            <div class="col-lg-2"></div>           
        </div>
    </div>
<%- include('../includes/footer'); %>